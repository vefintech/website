<div class="row" id="legal-div" style="display:<%= associate?(associate.type=='LEGAL'?'block':'none'):'none'%>">
    <div class="col-xl-12">
        <form id="legal-form" enctype="multipart/form-data" method="post" action="<%= url %>" data-parsley-validate="" novalidate="">
            <!-- START card-->
            <div class="card card-default">

            <div class="card-body">
                <div class="form-group">
                    <label class="col-form-label" for="business_name">Razón Social *</label>
                    <input value="<%= associate?associate.business_name: ''%>" placeholder="Razón Social" class="form-control" id="business_name" type="text" name="business_name"  data-parsley-minlength="10" required>
                </div>
                <% if ((associate)) {%>
                    <div class="px-2">
                    <img onerror="this.onerror=null;this.src='/img/user-default.png'" class="img-fluid rounded thumb64" src="/img/associates/<%= associate.image %>" alt="">
                    </div>  
                <% }%>
                                              
                <div class="form-group">
                    <label class="col-form-label" for="image">Logo</label>
                    <input <%= (associate)?'':'required'%> accept="image/png, image/jpeg" class="form-control-file" id="image" type="file" name="image"  %> >
                </div>  
                <div class="form-group">
                    <label class="col-form-label" for="email">Correo electronico *</label>
                    <input <%= (associate)?'readonly':''%>  value="<%= associate?associate.email: ''%>" placeholder="Correo electronico" class="form-control" type="email" name="email" id="email" required data-parsley-type="email"  >
                </div>
                <div class="form-group">
                    <label class="col-form-label" for="password">Clave *</label>
                    <input <%= (associate)?'':'required'%> placeholder="clave" class="form-control" id="password" type="password" name="password"  %> data-parsley-minlength="6">
                </div>
                <div class="form-group">
                    <label class="col-form-label" for="dni">R.I.F *</label>
                    <input value="<%= associate?associate.dni: ''%>"  placeholder="R.I.F" class="form-control" id="dni" type="text" name="dni"  %> required>
                </div>                
                <div class="form-group">
                    <label class="col-form-label" for="address">Domicilio Fiscal</label>
                    <input value="<%= associate?associate.address: ''%>"  placeholder="Domicilio Fiscal" class="form-control" id="address" type="text" name="address"  %> >
                </div>
                <div class="form-group">
                    <label class="col-form-label" for="phone">Telefono</label>
                    <input value="<%= associate?associate.phone: ''%>"  placeholder="Telefono" class="form-control" id="phone" type="phone" name="phone"  %> data-parsley-minlength="11">
                </div>  
                <div class="form-group">
                    <label class="col-form-label" for="contact">Persona de contacto</label>
                    <input value="<%= associate?associate.contact: ''%>"  placeholder="Persona de contacto" class="form-control" id="contact" type="text" name="contact"  %> >
                </div> 
                <div class="form-group">
                    <label class="col-form-label" for="activity">Actividad Comercial *</label>
                    <input required value="<%= associate?associate.activity: ''%>"  placeholder="Actividad Comercial" class="form-control" id="activity" type="text" name="activity"  %> >
                </div> 
                <div class="form-group">
                    <label class="col-form-label" for="employees">Cantidad de empleados *</label>
                    <div class="form-check">
                        <input <%= associate?associate.employees=='1-3'?'checked': '': 'checked'%> class="form-check-input" type="radio" name="employees" id="employees_1" value="1-3">
                        <label class="form-check-label" for="employees_1">
                            1-3
                        </label>
                    </div>  
                    <div class="form-check">
                        <input <%= associate?associate.employees=='3-5'?'checked': '': ''%> class="form-check-input" type="radio" name="employees" id="employees_2" value="3-5">
                        <label class="form-check-label" for="employees_2">
                            3-5
                        </label>
                    </div>
                    <div class="form-check">
                        <input <%= associate?associate.employees=='5-10'?'checked': '': ''%> class="form-check-input" type="radio" name="employees" id="employees_3" value="5-10">
                        <label class="form-check-label" for="employees_3">
                            5-10
                        </label>
                    </div> 
                    <div class="form-check">
                        <input <%= associate?associate.employees=='10-50'?'checked': '': ''%> class="form-check-input" type="radio" name="employees" id="employees_4" value="10-50">
                        <label class="form-check-label" for="employees_4">
                        10-50
                        </label>
                    </div>
                    <div class="form-check">
                        <input <%= associate?associate.employees=='50+'?'checked': '': ''%> class="form-check-input" type="radio" name="employees" id="employees_5" value="50+">
                        <label class="form-check-label" for="employees_5">
                        50+
                        </label>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-form-label" for="answer">Que te atrae de la comunidad Fintech*?</label>
                    <div class="form-check">
                        <input <%= associate?associate.answer=='Quiero promover mis servicios'?'checked': '': 'checked'%> class="form-check-input" type="radio" name="answer" id="answer_1" value="Quiero promover mis servicios">
                        <label class="form-check-label" for="answer_1">
                            Quiero promover mis servicios
                        </label>
                    </div>  
                    <div class="form-check">
                        <input <%= associate?associate.answer=='Me gustaría aportar ideas'?'checked': '': ''%> class="form-check-input" type="radio" name="answer" id="answer_2" value="Me gustaría aportar ideas">
                        <label class="form-check-label" for="answer_2">
                        Me gustaría aportar ideas
                        </label>
                    </div>
                    <div class="form-check">
                        <input <%= associate?associate.answer=='Quiero colaborar activamente en la Asociación'?'checked': '': ''%> class="form-check-input" type="radio" name="answer" id="answer_3" value="Quiero colaborar activamente en la Asociación">
                        <label class="form-check-label" for="answer_3">
                        Quiero colaborar activamente en la Asociación
                        </label>
                    </div>  
                </div>
                <div class="form-group">
                    <div class="checkbox c-checkbox">
                        <label>
                            <input type="checkbox" name="status" <%= (associate && associate.status=='ACTIVE')?'checked':'' %> >
                            <span class="fa fa-check"></span> Activo?
                        </label>
                 </div>
                </div>   
                
                <input class="form-control" name="type" value="LEGAL" type="hidden">
                <input class="form-control" value="" type="hidden" name="bot">
                <div class="required">* Campos requeridos</div>
            </div>
            <div class="card-footer">
                <div class="clearfix">
                    <div class="float-left">

                    </div>
                    <div class="float-right">
                        <button class="btn btn-primary" type="submit">Guardar</button>
                    </div>
                </div>
            </div>
            </div>
            <!-- END card-->
        </form>
    </div>
</div>